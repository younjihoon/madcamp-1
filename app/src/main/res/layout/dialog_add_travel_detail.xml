<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/dialogImageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        app:cardCornerRadius="30dp"
        android:src="@drawable/ic_launcher_foreground" />

    <Button
        android:id="@+id/imagePickerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#79A0C1"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:text="대표 이미지" />

    <EditText
        android:id="@+id/et_travel_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="15sp"
        android:hint="여행 제목" />

    <EditText
        android:id="@+id/et_travel_place"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:textSize="15sp"
        android:hint="여행지" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/startDateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#79A0C1"
            android:textColor="#FFFFFF"
            android:text="00/00/00"
            android:textSize="14sp"/>


        <TextView
            android:id="@+id/dateSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="~"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <Button
            android:id="@+id/endDateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#79A0C1"
            android:textColor="#FFFFFF"
            android:text="00/00/00"
            android:textSize="14sp"/>
    </LinearLayout>


    <EditText
        android:id="@+id/et_travel_tags"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:hint="태그는 공백으로 구분됩니다"
        android:singleLine="true"/>

    <EditText
        android:id="@+id/et_travel_memo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:hint="한 줄 메모"
        android:singleLine="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#79A0C1"
        android:textColor="#FFFFFF"
        android:text="저장"
        android:textSize="15sp"/>
</LinearLayout>

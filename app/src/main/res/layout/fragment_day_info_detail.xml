<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastel_green"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/detailViewPager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수정"
            android:layout_marginBottom="16dp" />
        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/linearlayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/textedit_disabled">
                <EditText
                    android:id="@+id/detailDayNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:text="Day" />
                <EditText
                    android:id="@+id/detailDayNumberEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:background="@android:color/transparent"
                    android:text="1" />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/detailAddressEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="10dp"
                android:enabled="false"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="123 Main Street"
                android:background="@drawable/textedit_disabled" />
        </LinearLayout>

        <EditText
            android:id="@+id/detailDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:background="@drawable/textedit_disabled"
            android:enabled="false"
            android:padding="10dp"
            android:text="Description goes here."
            android:textColor="@color/black"
            android:textSize="14sp" />
        <View
            android:layout_width="1000dp"
            android:layout_height="1000dp"
            android:layout_weight="1"/>

    </LinearLayout>
</ScrollView>
